{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "./dist", // 輸出的目錄
    "declaration": true, // 生成 .d.ts 類型文件
    "module": "ESNext", // 使用 ES 模組格式
    "target": "ESNext", // 輸出 ESNext 的語法
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src"]
}
